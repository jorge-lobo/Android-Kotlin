<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".AlunoActivity">

    <TextView
        android:id="@+id/text_titulo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/material_dynamic_primary20"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Dados do aluno"
        android:textAllCaps="true"
        android:textColor="@color/material_dynamic_primary70"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:paddingHorizontal="50dp">

        <TextView
            android:id="@+id/text_aluno1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="right"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_aluno2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="left"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_voltar"
        android:backgroundTint="@color/material_dynamic_primary20"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Voltar atrÃ¡s"
        android:layout_marginTop="50dp"
        android:textAllCaps="true"
        android:textColor="@color/material_dynamic_primary70"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>