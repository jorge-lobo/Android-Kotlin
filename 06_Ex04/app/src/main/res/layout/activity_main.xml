<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="MENU"
        android:textColor="@color/accent"
        android:textSize="60sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/accent"
        android:backgroundTintMode="add" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_pizza"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:paddingVertical="10dp"
                android:paddingStart="5dp"
                android:text="Pizza"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:theme="@style/MyCheckbox"
                app:buttonTint="@color/accent" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Qt:"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_qt_pizza"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_pvp_pizza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="right"
                    android:text="12.00€"
                    android:textColor="@color/accent"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ic_pizza"
                android:layout_width="180dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/pizza" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_lasagna"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:paddingVertical="10dp"
                android:paddingStart="5dp"
                android:text="Lasagna"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:theme="@style/MyCheckbox"
                app:buttonTint="@color/accent" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Qt:"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_qt_lasagna"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_pvp_lasagna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="right"
                    android:text="15.00€"
                    android:textColor="@color/accent"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ic_lasagna"
                android:layout_width="180dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/lasagna" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_carbonara"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:paddingVertical="10dp"
                android:paddingStart="5dp"
                android:text="Carbonara"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:theme="@style/MyCheckbox"
                app:buttonTint="@color/accent" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Qt:"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_qt_carbonara"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_pvp_carbonara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="right"
                    android:text="10.00€"
                    android:textColor="@color/accent"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ic_carbonara"
                android:layout_width="180dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/carbonara" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_bolognese"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:paddingVertical="10dp"
                android:paddingStart="5dp"
                android:text="Bolognese"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:theme="@style/MyCheckbox"
                app:buttonTint="@color/accent" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Qt:"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_qt_bolognese"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_pvp_bolognese"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="right"
                    android:text="10.00€"
                    android:textColor="@color/accent"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ic_bolognese"
                android:layout_width="180dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/bolognese" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_cake"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:paddingVertical="10dp"
                android:paddingStart="5dp"
                android:text="Cake"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:theme="@style/MyCheckbox"
                app:buttonTint="@color/accent" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Qt:"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_qt_cake"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_pvp_cake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="right"
                    android:text="2.00€"
                    android:textColor="@color/accent"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ic_cake"
                android:layout_width="180dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/cake" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_icecream"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:paddingVertical="10dp"
                android:paddingStart="5dp"
                android:text="Icecream"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:theme="@style/MyCheckbox"
                app:buttonTint="@color/accent" />

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:text="Qt:"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit_qt_icecream"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_pvp_icecream"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:gravity="right"
                    android:text="2.50€"
                    android:textColor="@color/accent"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ic_icecream"
                android:layout_width="180dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/icecream" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/accent"
        android:fontFamily="sans-serif"
        android:text="Place Order"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>